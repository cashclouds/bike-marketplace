# ========================================
# BikeMarket Environment Variables
# ========================================
# ВНИМАНИЕ: Скопируйте этот файл в .env.local и заполните реальные значения
# НИКОГДА не коммитьте .env.local в Git!

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/bike_marketplace
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bike_marketplace
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ========================================
# Authentication & Security
# ========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRATION=7d

# ========================================
# Frontend Configuration
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# ========================================
# Backend Server Configuration
# ========================================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ========================================
# File Upload Configuration
# ========================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=public/uploads

# ========================================
# Stripe Payment Configuration
# ========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ========================================
# Email Configuration
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@bikemarketplace.com

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# HTTPS/SSL Configuration
# ========================================
USE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
